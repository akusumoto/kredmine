<%#===========================================.%>
<%# リスト本体.%>
<%#===========================================%>
<%# リストが空の場合はデータが存在しない旨を伝える%>
<% if (@now_project_events.blank?) %>
  <p class="nodata"><%= l(:label_no_data) %></p>

<%# 存在する場合は一覧を表示する.%>
<% else %>

	<pre><code class="rhtml">
	<table class="list">

	  <thead><tr>  
	  <th width ="100"><%=h l(:field_subject) %></th>
	  <th width ="1"><%=h l(:field_event_date) %></th> 
	  <th width ="1"><%=h l(:field_event_owner_id) %></th> 
	  <th width ="1"><%=h l(:field_event_place_station) %></th> 
	  </tr></thead>

	  <tbody>
	  <% @now_project_events.each do |itr| %>
		<tr class="<%= cycle('odd', 'even') %>">
		  <td><%= link_to(itr.event_subject, 
				  {:controller => "ctrl_event_detail", :action=> "show", :project_id => @project, :event => itr.id} ) %></td>
		  <td><%= itr.event_date.to_date.to_s(:db) %></td>
		  <td><%= @now_project_events_users[itr.event_owner_id].name %></td>
		  <td><%= itr.event_place_station %> </td>
		</tr>
	  <% end %>
	  </tbody>

	</table>
	</code></pre>

<% end %>

  